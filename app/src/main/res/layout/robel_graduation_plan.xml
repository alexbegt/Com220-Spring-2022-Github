<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.davia.GraduationPlanActivity" android:orientation="vertical">

    <EditText
        android:id="@+id/multiLine"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:editable="false"
        android:ems="10"
        android:gravity="start|center_horizontal|top|center_vertical"
        android:text="@string/robel_graduation_plan"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="24sp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="1" android:gravity="bottom|center">



        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/returnHomeButton"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:onClick="onClickHomeBtn"
            android:text="@string/return_button"
            android:translationY="-250px" />
    </LinearLayout>

</LinearLayout>

